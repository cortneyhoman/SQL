/*Table contains the director(s) of the highest worldwide grossing movies of all time as of May 2023*/
CREATE TABLE Top25Directors (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    director1 TEXT,
    director2 TEXT
);

